@{
    ViewBag.Title = "Listado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: Arial;
    }

    .huser-20{
        height: 20px;
    }
    #global {
	height: 500px;
	border: 1px solid #ddd;
	background: #f1f1f1;
	overflow-y: scroll;
    margin-left: 25px;
    }

    #mensajes {
	    height: auto;
    }

    /* Style the tab */
    .tab {
        overflow: hidden;
        border: 1px solid #bcecf1;
        background-color: #effafc;
    }

        /* Style the buttons inside the tab */
        .tab button {
            background-color: inherit;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 8px 16px;
            transition: 0.3s;
            font-size: 17px;
        }

            /* Change background color of buttons on hover */
            .tab button:hover {
                background-color: #baecf5;
            }

            /* Create an active/current tablink class */
            .tab button.active {
                background-color: #baecf5;
            }

    /* Style the tab content */
    .tabcontent {
        display: none;
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-top: none;
    }
</style>

<div class="container-fluid" style="height:93%;">
    <div class="panel">
        <div class="container-fluid">
            <div class="topbar-left col-xs-6">
                <h3>Solicitud de Requerimiento</h3>
            </div>
        </div>
        <div class="container-fluid">
            <div class="col-xs-6">
                <div class="topbar-left col-xs-6">
                    <h4 style="font-size:1.2em;">Total de Registros: <span id="spnTotalRegistros"></span></h4>
                </div>
            </div>
            <div class="col-xs-6 right">
                <button class="btn btn-sm btn-primary pull-right plu" data-target="modal1" onclick="ModalNuevo()" style="margin-left:10px;">Nuevo</button>
                @*<button class="btn btn-sm  btn-success pull-right plu" id="btnPdf" style="margin-left:10px;">Descargar PDF</button>
                <button class="btn btn-sm btn-info pull-right plu" id="btnExcel" style="margin-left:10px;">Descargar Excel</button>*@
            </div>
        </div>
    </div>
    <div class="panel">
        <div class="container-fluid">
            <table id="table_id" class="table" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Obra</th>
                        <th>Almacen</th>
                        <th>N° Pedido</th>
                        <th>Fecha Inicio</th>
                        <th>Fecha Tentativa</th>
                        <th>Solicitante</th>
                        <th>Autorizado Por</th>
                        <th>Estado</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody id="tbody_almacen"></tbody>
            </table>
        </div>
    </div>


    <!-- Modal -->
    <div id="modal-form" class="popup-xl allcp-form mfp-with-anim mfp-hide">
        <div class="panel">
            <div class="panel-heading">
                <h5 id='lblTituloModal'></h5>
            </div>
            <div class="panel-body ">
                <div class='col s12 m12 '>
                    <div class='container-fluid row'>

                        <div class='form-horizontal col-9 col-sm-9'>
                            <div class="form-group-sm" style="display:none;">
                                <input placeholder='' id='txtId' type='text' style="display:none;">
                                @*<input placeholder='' id='txtEstado' type='text' style="display:none;">*@
                            </div>

                            <div class="row">
                                <div class='form-group-sm'>
                                    <label for="IdBase" class="control-label col-sm-2 left-align">Base</label>
                                    <div class="col-sm-4">
                                        <select id="IdBase" class="form-control input-sm" tabindex="0" onchange="ObtenerObraxIdBase()"></select>
                                    </div>
                                </div>

                                <div class='form-group-sm'>
                                    <label for="IdObra" class="control-label col-sm-2 left-align">Obra</label>
                                    <div class="col-sm-4">
                                        <select id="IdObra" class="form-control input-sm" tabindex="0" onchange="ObtenerAlmacenxIdObra()"></select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class='form-group-sm'>
                                    <label for="cboAlmacen" class="control-label col-sm-2 left-align">Almacen</label>
                                    <div class="col-sm-4">
                                        <select id="cboAlmacen" class="form-control input-sm" tabindex="0"></select>
                                    </div>
                                </div>

                                <div class='form-group-sm'>
                                    <label for="FechaInicio" class="control-label col-sm-2 left-align">Fecha Inicio</label>
                                    <div class="col-sm-4">
                                        <input id="FechaInicio" value="@DateTime.Now.ToString("yyyy-MM-dd")" type="date" class="form-control input-sm" tabindex="10">
                                    </div>
                                </div>

                            </div>




                            <div class="row">
                                <div class='form-group-sm'>
                                    <label for="cboSerie" class="control-label col-sm-2 left-align">Serie</label>
                                    <div class="col-sm-4">
                                        <select id="cboSerie" class="form-control input-sm" tabindex="0" ></select>
                                    </div>
                                </div>

                                <div class='form-group-sm'>
                                    <label for="FechaTentativa" class="control-label col-sm-2 left-align">Fecha Tentativa</label>
                                    <div class="col-sm-4">
                                        <input id="FechaTentativa" value="@DateTime.Now.ToString("yyyy-MM-dd")" type="date" class="form-control input-sm" tabindex="6">
                                    </div>
                                </div>


                            </div>

                            <div class="row">
                                <div class='form-group-sm'>
                                    <label for="Motivo" class="control-label col-sm-2 left-align">Motivo</label>
                                    <div class="col-sm-10">
                                        <textarea class="form-text" id="Motivo" name="Motivo" rows="4" cols="30" tabindex="14" style="width:100%"></textarea>
                                    </div>
                                </div>
                            </div>


                            





                            <br />

                            <div class="tab">
                                <button class="tablinks active" onclick="openContenido(event, 'Contenido')">Contenido</button>
                                <button class="tablinks" onclick="openContenido(event, 'Anexos')">Anexos</button>

                            </div>

                            <div id="Contenido" class="tabcontent" style="display: block;">
                                <div class='form-group-sm'>
                                    <div class="col-sm-4">
                                        <select class="form-control" id="cboClaseArticulo" style="margin-bottom:10px;margin-top:5px">
                                            <option value="0">Seleccione</option>
                                            <option value="1">Producto</option>
                                            <option value="2">Servicio</option>
                                            <option value="3">Activo</option>
                                        </select>
                                    </div>
                                </div>

                                <div class='form-group-sm'>
                                    <div class="col-sm-4">
                                        <select class="form-control" id="IdTipoProducto" style="margin-bottom:10px;margin-top:5px">
                                            <option value="0">Seleccione</option>
                                            <option value="1">MATERIALES</option>
                                            <option value="2">AUXILIARES</option>
                                        </select>
                                    </div>
                                </div>


                                <div class='form-group-sm'>
                                    <div class="col-sm-4">
                                        <button style="margin-bottom:10px;margin-top:5px" class="btn btn-xs btn-info" onclick="OpenModalItem()" type="button">Agregar Item</button>
                                    </div>
                                </div>
                                <div class="table-responsive">
                                    <table class="table" id="tabla" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th style="width:5px;display:block"><button style="display:none" class="btn btn-xs btn-info" onclick="AgregarLinea()" type="button">+</button></th>
                                                <th>Descripcion de Articulo</th>
                                                <th>Unid. Medida</th>
                                                <th style="width:140px;display:block">Cantidad</th>
                                                <th>Cantidad Aprobada</th>
                                                <th>Orden Compra</th>
                                                <th>Fecha Orden</th>
                                                <th>Accion</th>

                                            </tr>
                                        </thead>
                                        <tbody id="tbody_detalle"></tbody>
                                    </table>
                                </div>
                            </div>

                            <div id="Anexos" class="tabcontent">

                                @using (Html.BeginForm("GuardarFile", "SolicitudRQ", FormMethod.Post, new { id = "SubirAnexos", enctype = "multipart/form-data" }))
                                {
                                    <div class="row">
                                        <div class=''>
                                            <div class="col-sm-8">
                                                @*<label for="file">Subir Anexos</label>*@
                                                <input type="file" name="file" id="file" class="form-control" />
                                            </div>
                                        </div>
                                        <div class='form-group-sm'>
                                            <div class="col-sm-4">
                                                @*<label for="file">Subir Anexos</label>*@
                                                <input type="submit" value="Subir Archivo" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    @ViewBag.Message
                                    <br />
                                    <div class="table-responsive">
                                        <table class="table" id="tabla_files">
                                            <thead>
                                                <tr>
                                                    <th>Nombre</th>
                                                    <th>Descargar</th>
                                                    <th>Accion</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>

                                            @*@for (var i = 0; i <= Model.Count - 1; i++)
                                        {
                                        <tr>
                                        <td>@Model[i].ToString()</td>
                                        <td>@Html.ActionLink("Download", "Download", new { ImageName = Model[i].ToString() })</td>
                                        </tr>
                                        }*@
                                        </table>

                                    </div>
                                }

                            </div>

                            <br />
                         


                       
                            <br />
                            <div class="row">
                                <div class='form-group-sm'>
                                    <label for="txtComentarios" class="control-label col-sm-2 left-align">Comentarios</label>
                                    <div class="col-sm-10">
                                        @*<input id="txtComentarios" type="date" class="form-control input-sm" tabindex="14">*@
                                        <textarea class="form-control" id="txtComentarios" name="txtComentarios" rows="25" cols="30" tabindex="14"></textarea>
                                    </div>
                                </div>
                            </div>


                        </div>

                        <div class='form-horizontal col-3 col-sm-3'>

                            <div class="row" id="global" style="font-size:10px">
                                <div class='container-fluid' id="mensajes">
                                   
                                     <p>N° Pedido:  <input id="NroPlaca" type="text" class="form-control huser-20" tabindex="16"> </p>
                                    <hr style="margin: 0px 0px 5px 0px" />

                                    <p>
                                        Solicitante:
                                        <select style="height: 20px" id="Solicitante" type="text" class="form-control input-sm" tabindex="0">
                                            <option value="0">SELECCIONE Solicitante </option>
                                        </select>
                                    </p>
                                    <hr style="margin: 0px 0px 5px 0px" />

                                    <p>
                                        Autorizado por:
                                        <select style="height: 20px" id="Autorizado" type="text" class="form-control input-sm" tabindex="0">
                                            <option value="0">SELECCIONE Autorizado </option>
                                        </select>
                                    </p>
                                    <hr style="margin: 0px 0px 5px 0px" />

                              
                                    <p>N° Placa:  <input id="NroPlaca" type="text" class="form-control huser-20" tabindex="16"> </p>
                                    <hr style="margin: 0px 0px 5px 0px" />

                                    <p>
                                        Estado:
                                        <select style="height: 20px" id="Estado" type="text" class="form-control input-sm" tabindex="0">
                                            <option value="0">SELECCIONE Estado </option>
                                        </select>
                                    </p>
                            


                                  


                                </div>



                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-sm-6" style="color: red;font-weight: bold">
                    <p style="margin: 0px 0px 0px 0px">TOTAL DE ITEMS:  <span id="total_items"></span> </p>
                    <p style="margin: 0px 0px 0px 0px">USUARIO: <span id="NombUsuario"></span> </p>
                    <p style="margin: 0px 0px 0px 0px">FECHA DE  CREACION: <span id="CreatedAt"></span> </p>
                </div>

                <div class="col-sm-6">
                    <div class='form-group-sm'>
                      
                        <button type="button" id="btnGrabar" onclick="GuardarSolicitud()" class="btn btn-primary pull-right plu">Grabar</button>
                        <button type="button" id="btnCancelar" onclick="CerrarModal()" class="btn btn-danger pull-right" style="background-color:orange;">Cancelar</button>
                    </div>
                </div>
            </div>




            @*<div class="row">
            <button type="button" id="btnGrabar" onclick="GuardarSolicitud()" class="btn btn-primary pull-right plu">Grabar</button>
            <button type="button" id="btnCancelar" onclick="CerrarModal()" class="btn btn-danger pull-right" style="background-color:orange;">Cancelar</button>
            </div>*@
        </div>
    </div>



</div>


<script src="~/Scripts/SolicitudRequerimiento/Listado.js"></script>
<script src="~/Scripts/General.js"></script>
<script src="~/js/pdf/jspdf.min.js"></script>
<script src="~/js/pdf/faker.min.js"></script>
<script src="~/js/pdf/jspdf.plugin.autotable.src.js"></script>


