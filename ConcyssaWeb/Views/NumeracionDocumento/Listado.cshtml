@{
    ViewBag.Title = "Listado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="height:93%;">
    <div class="panel">
        <div class="container-fluid">
            <div class="topbar-left col-xs-6">
                <h3>Numeracion de Documentos Electronicos</h3>
            </div>
        </div>
        <div class="container-fluid">
            <div class="col-xs-6">
                <div class="topbar-left col-xs-6">
                    <h4 style="font-size:1.2em;">Total de Registros: <span id="spnTotalRegistros"></span></h4>
                </div>
            </div>
            <div class="col-xs-6 right">
                <button class="btn btn-sm btn-primary pull-right plu" data-target="modal1" onclick="ModalNuevo()" style="margin-left:10px;">Nuevo</button>
                @*<button class="btn btn-sm  btn-success pull-right plu" id="btnPdf" style="margin-left:10px;">Descargar PDF</button>
                <button class="btn btn-sm btn-info pull-right plu" id="btnExcel" style="margin-left:10px;">Descargar Excel</button>*@
            </div>
        </div>
    </div>
    <div class="panel">
        <div class="container-fluid">
            <table id="table_id" class="table" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Base</th>
                        <th>Tipo Documento</th>
                        <th>Serie</th>
                        <th>Numeracion Inicial</th>
                        <th>Estado</th>
                        <th>Mas</th>
                    </tr>
                </thead>
                <tbody id="tbody_numeracion"></tbody>
            </table>
        </div>
    </div>


    <!-- Modal -->
    <div id="modal-form" class="popup-sm allcp-form mfp-with-anim mfp-hide">
        <div class="panel">
            <div class="panel-heading">
                <h5 id='lblTituloModal'></h5>
            </div>
            <div class="panel-body ">
                <div class='col s12 m12 '>
                    <div class='container-fluid'>
                        <input id='txtId' name="txtId" type='hidden' class="form-control input-sm">
                        <div class='form-horizontal'>
                            <div class="row">
                                <div class='form-group-sm col-sm-6'>
                                    <label for='cboBase' class="control-label col-sm-4 left-align">Base</label>
                                    <div class="col-sm-8">
                                        <select id="cboBase" type="text" class="form-control input-sm" tabindex="1"></select>
                                    </div>
                                </div>

                                <div class='form-group-sm col-sm-6'>
                                    <label for="cboTipoDocumento" class="control-label col-sm-4 left-align">TipoDocumento</label>
                                    <div class="col-sm-8">
                                        <select id="cboTipoDocumento" type="text" class="form-control input-sm" tabindex="2"></select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class='form-group-sm col-sm-6'>
                                    <label for='txtSerie' class="control-label col-sm-4 left-align">Serie</label>
                                    <div class="col-sm-8">
                                        <input id='txtSerie' name="txtSerie" type='text' class="form-control input-sm" tabindex="3">
                                    </div>
                                </div>
                                <div class='form-group-sm col-sm-6'>
                                    <label for='txtCuentaContable' class="control-label col-sm-4 left-align">Numeracion Inicial</label>
                                    <div class="col-sm-8">
                                        <input id='txtNumeracionInicial' name="txtNumeracionInicial" type='text' class="form-control input-sm" tabindex="4">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class='form-group-sm col-sm-2'></div>
                                <div class='form-group-sm'>
                                    <div class="checkbox-custom col-xs-6">
                                        <input type="checkbox" id="chkActivo" />
                                        <label for="chkActivo">Activo</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <div class="row">
                    <button type="button" id="btnGrabar" onclick="GuardarNumeracion()" class="btn btn-primary pull-right plu">Grabar</button>
                    <button type="button" id="btnCancelar" class="btn btn-danger pull-right" style="background-color:orange;" onclick="closePopup();">Cancelar</button>
                </div>
            </div>
        </div>
    </div>



</div>


<script src="~/Scripts/NumeracionDocumento/Listado.js"></script>
<script src="~/Scripts/General.js"></script>
<script src="~/js/pdf/jspdf.min.js"></script>
<script src="~/js/pdf/faker.min.js"></script>
<script src="~/js/pdf/jspdf.plugin.autotable.src.js"></script>


