@{
    ViewBag.Title = "Listado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="height:93%;">
    <div class="panel">
        <div class="container-fluid">
            <div class="topbar-left col-xs-6">
                <h3>Kardex</h3>
            </div>
        </div>
        <div class="container-fluid ">
            <div class="col-xs-12">
                <div class="topbar-left col-xs-12">
                    <h4 style="font-size:1.2em;">Total de Registros: <span id="spnTotalRegistros"></span></h4>
                </div>
            </div>
        @*    <div class="col-xs-6 right">
           
            </div>
            
*@
            <br />

            <div class="row">
    
                <div class='form-group-sm'>
                    <label for="txtPrecioUnitarioItem" class="control-label col-sm-1 left-right">Almacen</label>
                    <div class="col-sm-3">
                        <select id="IdAlmacen" class="form-control input-sm" tabindex="0" onchange="ValidarAlmacen()"></select>
                    </div>
                </div>
            </div>

            <div class="row">

                <div class='form-group-sm'>
                    <label for="cboClaseArticulo" class="control-label col-sm-1 left-right">Tipo Articulo</label>
                    <div class="col-sm-3">
                        <select id="cboClaseArticulo" class="form-control input-sm" tabindex="0" onchange="ValidarTipoArticulo()" disabled>
                            <option value="0">Seleccione</option>
                            <option value="1">PRODUCTO</option>
                            @*<option value="2">Servicio</option>*@
                            <option value="3">ACTIVO</option>
                        </select>

                    </div>
                </div>

            </div>
            <div class="row" id="divOcultar">

                <div class='form-group-sm'>
                    <label for="IdTipoProducto" class="control-label col-sm-1 left-right">Tipo Producto</label>
                    <div class="col-sm-3">
                        <select id="IdTipoProducto" class="form-control input-sm" tabindex="0" onchange="BuscarCodigoProducto()" disabled>

                            <option value="0">Seleccione</option>
                            <option value="1">MATERIALES</option>
                            <option value="2">AUXILIARES</option>
                        </select>

                    </div>
                </div>

            </div>


            <div class="row">
             
                <div class='form-group-sm'>
                    <label for="txtDescripcionItem" class="control-label col-sm-1 left-right">Producto</label>
                    <div class="col-sm-3">
                         <select id="IdArticulo" class="form-control input-sm" tabindex="0" ></select>
                        
                    </div>
                </div>
              
            </div>

            <div class="row">
              
                <div class='form-group-sm'>
                    <label for="txtDescripcionItem" class="control-label col-sm-1 left-right">Fecha Inicio:</label>
                    <div class="col-sm-3">
                        <input id="FechaInicio" type="date" class="form-control input-sm" >
                    </div>
                </div>
                </div>
            <div class="row">
            
                <div class='form-group-sm'>
                    <label for="txtPrecioUnitarioItem" class="control-label col-sm-1 left-right">Fecha Termino:</label>
                    <div class="col-sm-3">
                        <input id="FechaTermino" type="date" class="form-control input-sm">
                    </div>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-sm-12">
                    <a id="reporteRPT" style="display:none" download="" href="data:application/octet-stream;base64,R0lGODdhAQABAPAAAP8AAAAAACwAAAAAAQABAAACAkQBADs=">download image</a>
       @*             <button class="btn btn-success" onclick="ReporteKardex()">Reporte</button>*@
                    <button class="btn btn-success" onclick="ImportarExcel()">Importar a Excel</button>
                    <button class="btn btn-info" onclick="BuscarKardex()">Buscar</button>
                </div>
            </div>

        </div>


    </div>
    <div class="panel">
        <div class="container-fluid">
            <table id="table_id" class="table text-center table-resposive" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Modulo</th>
                        <th>Codigo</th>
                        <th>Articulo</th>
                  
                        <th>Fecha y Hora de Transaccion</th>
                        <th>Tipo Transaccion</th>
                        <th>Numero</th>
                     
                        <th>Fecha Documento</th>
                        <th>Fecha Contabilizacion</th>
                        <th>Tipo Documento</th>
                        <th>Serie y Numero</th>
                        <th>Unidad Medida</th>
                        <th>IN/OUT</th>
                        <th>Precio In/Out</th>
                        <th>Valor Mov</th>
                        <th>Saldo</th>
                        
                        <th>Costo Promedio</th>
                        <th>Valorizado</th>
                        <th>Usuario</th>
                        <th>Cuadrilla</th>
                        <th>Nro Ref</th>
                    </tr>
                </thead>
                <tbody id="tbody_division"></tbody>
            </table>
        </div>
    </div>


    <!-- Modal -->
    <div id="modal-form" class="popup-sm allcp-form mfp-with-anim mfp-hide">
        <div class="panel">
            <div class="panel-heading">
                <h5 id='lblTituloModal'></h5>
            </div>
            <div class="panel-body ">
                <div class='col s12 m12 '>
                    <div class='container-fluid'>
                        <input id='txtId' name="txtId" type='hidden' class="form-control input-sm">
                        <div class='form-horizontal'>
                            <div class="row">
                                <div class='form-group-sm'>
                                    <label for='txtCodigo' class="control-label col-sm-4 left-align">Codigo</label>
                                    <div class="col-sm-8">
                                        <input id='txtCodigo' name="txtCodigo" type='text' class="form-control input-sm" tabindex="1">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class='form-group-sm'>
                                    <label for='txtDescripcion' class="control-label col-sm-4 left-align">Descripcion</label>
                                    <div class="col-sm-8">
                                        <input id='txtDescripcion' name="txtDescripcion" type='text' class="form-control input-sm" tabindex="2">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class='form-group-sm col-sm-4'></div>
                                <div class='form-group-sm'>
                                    <div class="checkbox-custom col-xs-6">
                                        <input type="checkbox" id="chkActivo" />
                                        <label for="chkActivo">Activo</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <div class="row">
                    <button type="button" id="btnGrabar" onclick="GuardarDivision()" class="btn btn-primary pull-right plu">Grabar</button>
                    <button type="button" id="btnCancelar" class="btn btn-danger pull-right" style="background-color:orange;" onclick="closePopup();">Cancelar</button>
                </div>
            </div>
        </div>
    </div>



</div>
@{
    Random rnd = new Random();
}


<script src="~/Scripts/InformeKardex/Listado.js?v=@rnd.Next(1, 1000 + 1)"></script>
<script src="~/Scripts/General.js"></script>
<script src="~/js/pdf/jspdf.min.js"></script>
<script src="~/js/pdf/faker.min.js"></script>
<script src="~/js/pdf/jspdf.plugin.autotable.src.js"></script>


