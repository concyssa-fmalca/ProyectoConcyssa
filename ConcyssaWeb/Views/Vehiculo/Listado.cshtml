@{
    ViewBag.Title = "Listado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="height:93%;">
    <div class="panel">
        <div class="container-fluid">
            <div class="topbar-left col-xs-6">
                <h3>Vehiculo</h3>
            </div>
        </div>
        <div class="container-fluid">
            <div class="col-xs-6">
                <div class="topbar-left col-xs-6">
                    <h4 style="font-size:1.2em;">Total de Registros: <span id="spnTotalRegistros"></span></h4>
                </div>
            </div>
            <div class="col-xs-6 right">
                <button class="btn btn-sm btn-primary pull-right plu" data-target="modal1" onclick="ModalNuevo()" style="margin-left:10px;">Nuevo</button>
                @*<button class="btn btn-sm  btn-success pull-right plu" id="btnPdf" style="margin-left:10px;">Descargar PDF</button>
                    <button class="btn btn-sm btn-info pull-right plu" id="btnExcel" style="margin-left:10px;">Descargar Excel</button>*@
            </div>
        </div>
    </div>
    <div class="panel">
        <div class="container-fluid">
            <table id="table_id" class="table" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Placa</th>
                        <th>Marca</th>
                        @*<th>Certificado Inscripcion</th>*@
                        <th>Base</th>
                        <th>ApellidoChofer</th>
                        <th>Condicion</th>

                        <th>Mas</th>
                    </tr>
                </thead>
                <tbody id="tbody_Vehiculo"></tbody>
            </table>
        </div>
    </div>


    <!-- Modal -->
    <div id="modal-form" class="popup-sm allcp-form mfp-with-anim mfp-hide">
        <div class="panel">
            <div class="panel-heading">
                <h5 id='lblTituloModal'></h5>
            </div>
            <div class="panel-body ">
                <div class='col s12 m12 '>
                    <div class='container-fluid'>
                        <input id='txtId' name="txtId" type='hidden' class="form-control input-sm">
                        <div class='form-horizontal'>

                            <div class="row">
                                <div class='form-group-sm'>
                                    <label for='txtPlaca' class="control-label col-sm-4 left-align">Placa</label>
                                    <div class="col-sm-8">
                                        <input id='txtPlaca' name="txtPlaca" type='text' class="form-control input-sm" tabindex="1">
                                    </div>
                                </div>
                            </div>

                             <div class="row">
                                <div class='form-group-sm'>
                                    <label for='txtCertfificadoInscripcion' class="control-label col-sm-4 left-align">Certificado Ins.</label>
                                    <div class="col-sm-8">
                                        <input id='txtCertfificadoInscripcion' name="txtCertfificadoInscripcion" type='text' class="form-control input-sm" tabindex="1">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class='form-group-sm'>
                                    <label for='txtPlaca' class="control-label col-sm-4 left-align">Marca</label>
                                    <div class="col-sm-8">
                                        <select class="form-control" id="cboIdMarca"> Seleccione Marca</select>
                                        
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class='form-group-sm'>
                                    <label for='cboIdBase' class="control-label col-sm-4 left-align">Base</label>
                                    <div class="col-sm-8">
                                        <select class="form-control" id="cboIdBase"> Seleccione Base</select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class='form-group-sm'>
                                    <label for='cboCondicion' class="control-label col-sm-4 left-align">Condicion</label>
                                    <div class="col-sm-8">
                                        <select class="form-control" id="cboCondicion"> 
                                            <option value="0">Selecione</option>      
                                            <option value="PROPIO">Propio</option>      
                                            <option value="ALQUILADO">ALQUILADO</option>      
                                        </select>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class='form-group-sm'>
                                    <label for='cboIdChofer' class="control-label col-sm-4 left-align">Chofer</label>
                                    <div class="col-sm-8">
                                        <select class="form-control" id="cboIdChofer"> Seleccione Chofer</select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class='form-group-sm col-sm-4'></div>
                                <div class='form-group-sm'>
                                    <div class="checkbox-custom col-xs-6">
                                        <input type="checkbox" id="chkActivo" />
                                        <label for="chkActivo">Activo</label>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <div class="row">
                    <button type="button" id="btnGrabar" onclick="GuardarVehiculo()" class="btn btn-primary pull-right plu">Grabar</button>
                    <button type="button" id="btnCancelar" class="btn btn-danger pull-right" style="background-color:orange;" onclick="closePopup();">Cancelar</button>
                </div>
            </div>
        </div>
    </div>



</div>


<script src="~/Scripts/Vehiculo/Listado.js"></script>
<script src="~/Scripts/General.js"></script>
<script src="~/js/pdf/jspdf.min.js"></script>
<script src="~/js/pdf/faker.min.js"></script>
<script src="~/js/pdf/jspdf.plugin.autotable.src.js"></script>


