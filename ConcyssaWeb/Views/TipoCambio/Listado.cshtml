@{
    ViewBag.Title = "Listado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="height:93%;">
    <div class="panel">
        <div class="container-fluid">
            <div class="topbar-left col-xs-6">
                <h3>Tipo Cambio</h3>
            </div>
        </div>
        <div class="container-fluid">
            <div class="col-xs-6">
                <div class="topbar-left col-xs-6">
                    <h4 style="font-size:1.2em;">Total de Registros: <span id="spnTotalRegistros"></span></h4>
                </div>
            </div>
            <div class="col-xs-6 right">
                <button class="btn btn-sm btn-primary pull-right plu" data-target="modal1" onclick="ActualizarTipoCambio()" style="margin-left:10px;">Actualizar Tipo Cambio</button>
                @*<button class="btn btn-sm  btn-success pull-right plu" id="btnPdf" style="margin-left:10px;">Descargar PDF</button>
                <button class="btn btn-sm btn-info pull-right plu" id="btnExcel" style="margin-left:10px;">Descargar Excel</button>*@
            </div>
        </div>
    </div>
    <div class="panel">
        <div class="container-fluid">
            <table id="table_id" class="table" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Moneda</th>
                        <th>Fecha</th>
                        <th>Compra</th>
                        <th>Venta</th>
                        <th>Origen</th>
                        <th>Mas</th>
                    </tr>
                </thead>
                <tbody id="tbody_tipocambio"></tbody>
            </table>
        </div>
    </div>


    <!-- Modal -->
    <div id="modal-form" class="popup-sm allcp-form mfp-with-anim mfp-hide">
        <div class="panel">
            <div class="panel-heading">
                <h5 id='lblTituloModal'></h5>
            </div>
            <div class="panel-body ">
                <div class='col s12 m12 '>
                    <div class='container-fluid'>
                        <input id='txtId' name="txtId" type='hidden' class="form-control input-sm">
                        <div class='form-horizontal'>
                            <div class="row">
                                <div class='form-group-sm col-sm-6'>
                                    <label for='txtCodigo' class="control-label col-sm-4 left-align">Moneda</label>
                                    <div class="col-sm-8">
                                        <input id='txtMoneda' name="txtCodigo" type='text' class="form-control input-sm" tabindex="1" disabled>
                                    </div>
                                </div>

                                <div class='form-group-sm col-sm-6'>
                                    <label for="dtFecha" class="control-label col-sm-4 left-align">Fecha</label>
                                    <div class="col-sm-8">
                                        <input id='dtFecha' name="dtFecha" type='date' class="form-control input-sm" tabindex="1" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class='form-group-sm col-sm-6'>
                                    <label for='txtCompra' class="control-label col-sm-4 left-align">Compra</label>
                                    <div class="col-sm-8">
                                        <input id='txtCompra' name="txtCompra" type='text' class="form-control input-sm" tabindex="2">
                                    </div>
                                </div>
                                <div class='form-group-sm col-sm-6'>
                                    <label for='txtVenta' class="control-label col-sm-4 left-align">Venta</label>
                                    <div class="col-sm-8">
                                        <input id='txtVenta' name="txtVenta" type='text' class="form-control input-sm" tabindex="2">
                                    </div>
                                </div>
                            </div>

                          
                        </div>

                    </div>
                </div>
            </div>
            <div class="panel-footer text-right">
                <div class="row">
                    <button type="button" id="btnGrabar" onclick="GuardarTipoCambio()" class="btn btn-primary pull-right plu">Grabar</button>
                    <button type="button" id="btnCancelar" class="btn btn-danger pull-right" style="background-color:orange;" onclick="closePopup();">Cancelar</button>
                </div>
            </div>
        </div>
    </div>



</div>


<script src="~/Scripts/TipoCambio/Listado.js"></script>
<script src="~/Scripts/General.js"></script>
<script src="~/js/pdf/jspdf.min.js"></script>
<script src="~/js/pdf/faker.min.js"></script>
<script src="~/js/pdf/jspdf.plugin.autotable.src.js"></script>


